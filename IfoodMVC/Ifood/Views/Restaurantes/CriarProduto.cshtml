@model ProdutoModel

@{
    ViewData["Title"] = "Cadastrar Produto";
    Layout = null;
}

<link rel="stylesheet" href="~/css/create-acc.css" asp-append-version="true">

<div class="container">
    <div class="box">

        <main>
           
            <img src="~/images/logo.svg" alt="">
            <h2>Cadastrar Produto no <span>IFood</span> </h2>

            <form asp-controller="Restaurantes" asp-action="CriarProduto" method="post" enctype="multipart/form-data" class="form">

                <div class="ipn">
                    <label for="nome"><strong>&nbsp;Nome</strong></label>
                    <input type="text" asp-for="NomeProduto" placeholder="&nbsp;Digite o nome do produto">
                </div>

                <div class="ipn">
                    <label for="preco"><strong>&nbsp;Preço</strong></label>
                    <input type="number" asp-for="Preco" placeholder="&nbsp;Digite o preço">
                </div>

                <div class="ipn">
                    <label for="obs"><strong>&nbsp;Observação</strong></label>
                    <input type="text" asp-for="Observacoes" placeholder="&nbsp;Ex: tirar cebola, tirar picles!">
                </div>
                
                <div class="ipn">
                    <label for="imagem"><strong>&nbsp;Imagem</strong></label>
                    <input type="file" asp-for="Imagem" >
                </div>

                <input type="hidden" asp-for="IdRestaurante"/>

                <div class="form-btn">

                    <a class="login-submit" asp-controller="Restaurantes" asp-action="Index">Voltar</a>

                    <button type="submit" class="cadastro-submit">Realizar cadastro</button>
                </div>
            </form>
        </main>
    </div>
</div>