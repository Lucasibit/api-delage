@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true">


<div class="container">
    <section class="box">

        <main>

            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alerta-sucesso" role="alert">
                    @TempData["MensagemSucesso"]
                </div>

            }

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alerta" role="alert">
                    @TempData["MensagemErro"] <span>@TempData["MensagemErroSpan"]</span>
                </div>
            }
            <img src="~/images/logo.svg" alt="">
            <h2>Falta pouco para matar sua <span>fome</span>!</h2>
            <form class="form" asp-controller="Login" asp-action="Entrar" method="post">

                <div class="ipn">
                    <label for="user-value">
                        <strong>&nbsp;Usuário</strong>
                    </label>
                    <input id="user-value" type="text" asp-for="Login" placeholder="Digite o nome de usuário UniFood">

                    <label for="pass-value">
                        <strong>&nbsp;Senha</strong>
                    </label>
                    <input id="pass-value" type="password" asp-for="Senha" placeholder="Digite sua senha">

                </div>

                <div class="form-btn">
                    <a class="create-acc-submit" asp-controller="Usuario" asp-action="Index">Criar conta</a>

                    <button type="submit" class="login-submit">Iniciar seção</button>
                </div>
            </form>
        </main>
    </section>
</div>